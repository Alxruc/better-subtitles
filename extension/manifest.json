{
    "manifest_version": 3,
    "name": "Better Subtitles Partner",
    "version": "0.1",
    "description": "Send YouTube pages to Better Subtitles",
    "action": {
        "default_popup": "index.html"
    },
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://*.youtube.com/*",
        "https://youtu.be/*"
    ],
    "content_scripts": [
    {
        "matches": ["*://*.youtube.com/watch*"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }
    ]
}